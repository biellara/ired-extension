{
  "manifest_version": 3,
  "name": "Ired Omnichannel AI Assistant",
  "version": "0.1.0",
  "description": "Analisa o humor do cliente e sugere respostas dentro do ERP omnichannel.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://erp.iredinternet.com.br/*"],
  "background": { "service_worker": "background/index.js" },
  "action": { "default_popup": "popup/index.html" },
  "options_page": "options/index.html",
  "content_scripts": [{
    "matches": ["https://erp.iredinternet.com.br/*"],
    "js": ["content/index.js"],
    "run_at": "document_end"
  }]
}
